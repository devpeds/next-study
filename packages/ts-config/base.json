{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "isolatedModules": true,
    "incremental": true
  }
}
